<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rsb_left_right_judgement_count_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:padding="@dimen/rsb_padding_medium" />

    <TextView
        android:id="@+id/rsb_left_right_judgement_timeout_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rsb_left_right_judgement_answer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/rsb_left_right_judgement_timeout_textview" />

    <ImageView
        android:id="@+id/rsb_left_right_judgement_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:contentDescription="images" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/rsb_left_right_judgement_button_left"
                android:layout_width="@dimen/rsb_step_layout_tapping_interval_button_size"
                android:layout_height="@dimen/rsb_step_layout_tapping_interval_button_size"
                android:layout_margin="@dimen/rsb_padding_large"
                android:gravity="center"
                android:text="@string/rsb_LEFT_RIGHT_JUDGEMENT_LEFT_BUTTON" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/rsb_left_right_judgement_button_right"
                android:layout_width="@dimen/rsb_step_layout_tapping_interval_button_size"
                android:layout_height="@dimen/rsb_step_layout_tapping_interval_button_size"
                android:layout_margin="@dimen/rsb_padding_large"
                android:gravity="center"
                android:text="@string/rsb_LEFT_RIGHT_JUDGEMENT_RIGHT_BUTTON" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>